build-type:       Simple
cabal-version:    >= 1.12
tested-with:         GHC == 7.10.3, GHC == 8.0.1

executable matterhorn
  hs-source-dirs:      src
  main-is:             Main.hs
  other-modules:       Config
                       Command
                       State
                       Zipper
                       Themes
                       Draw
                       Events
                       Types
  default-extensions:  OverloadedStrings,
                       ScopedTypeVariables
  ghc-options:         -Wall -threaded
  build-depends:       base >=4.7 && <5
                     , mattermost-api
                     , unordered-containers
                     , text
                     , bytestring
                     , ini
                     , process
                     , connection
                     , microlens-platform
                     , brick
                     , data-default
                     , vty
                     , transformers
                     , text-zipper
                     , time
                     , linebreak
                     , xdg-basedir
                     , filepath
                     , directory
  default-language:    Haskell2010
